@page "/devices"
@inject HttpClient Http
@inject Blazored.LocalStorage.ILocalStorageService localStore
@inject AwairBlazor.Services.AppData appData

<h1>Awair Devices</h1>

@if (devices == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Device Name</th>
                <th>Device UUID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var device in devices.DevicesDevices)
            {
                <tr>
                    <td>@device.Name</td>
                    <td>@device.DeviceUuid</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private QuickType.Devices devices;
    private static AwairService api;


    protected override async Task OnInitializedAsync()
    {
        await appData.InitAsync();

        var opts = new AwairServiceOptions()
            {
                Client=Http,
                BearerToken=appData.Bearer.Value,
                UseFahrenheit=appData.UseFahrenheit.Value,
                Proxy=appData.Proxy.Value,
            };

        api = new AwairService(opts);
        devices = await api.GetDevicesAsync();
    }

}